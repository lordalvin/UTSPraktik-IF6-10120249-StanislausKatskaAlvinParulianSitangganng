<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"

        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/banner" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card"
            android:orientation="vertical"
            android:padding="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pelaksanaan PPDB Tahap 1 - 2023"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:background="#E6F6EC"
                    android:drawableLeft="@drawable/icon01"
                    android:text="Detail"
                    android:textAlignment="center"
                    android:textColor="#16A75C"
                    android:textFontWeight="700"
                    android:paddingLeft="10dp"
                    />


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:id="@+id/ic_progress"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/ceklis" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ic_progress"
                    android:progressBackgroundTint="#16A75C" />

                <ImageView
                    android:id="@+id/ic_progress2"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_toRightOf="@id/progress"
                    android:src="@drawable/progress" />

                <ProgressBar
                    android:id="@+id/progress2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ic_progress2"

                    />
            </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/elemen1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.0"
                    android:src="@drawable/profilepribadi"
                    app:layout_constraintStart_toStartOf="parent"


                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/elemen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="Persiapan"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@id/elemen1"
                    app:layout_constraintTop_toTopOf="@id/elemen1" />

                <TextView
                    android:id="@+id/elemen3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:text="17 Mei - 05 Juni 2023"
                    app:layout_constraintStart_toEndOf="@id/elemen1"
                    app:layout_constraintTop_toBottomOf="@id/elemen2" />


                <ImageView
                    android:id="@+id/elemen4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon2"

                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/card"
            android:padding="12dp">
            <ImageView
                android:id="@+id/ic_pengumuman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/suara"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/text_pengumuman"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pengumuman Hasil Seleksi"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/ic_pengumuman"
                android:layout_marginTop="17dp"
                android:textStyle="bold"

                />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/text_pengumuman"
                app:cardBackgroundColor="#F0FBF4"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="12dp"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">
                    <TextView
                        android:id="@+id/text_pengumuman2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Anda dinyatakan diterima di"

                        android:layout_marginTop="17dp"
                        android:textColor="#069550"
                        app:layout_constraintEnd_toStartOf="@id/text_pengumuman4"
                        />

                    <TextView
                        android:id="@+id/text_pengumuman4"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:background="#16A75C"
                        android:drawableLeft="@drawable/icon02"
                        android:text="Detail"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textFontWeight="700"

                        app:layout_constraintStart_toEndOf="@id/text_pengumuman2"
                        android:layout_marginLeft="41dp"
                        />
                    <TextView
                        android:id="@+id/text_pengumuman5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SMA Negeri 1 Bojonggede"
                        android:textSize="14dp"
                        app:layout_constraintTop_toBottomOf="@id/text_pengumuman2"
                        android:textStyle="bold"

                        />
                    <TextView
                        android:id="@+id/text_pengumuman6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Jalur Prestasi Kejuaraan"

                        app:layout_constraintTop_toBottomOf="@id/text_pengumuman5"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/card"
            android:padding="12dp">
            <ImageView
                android:id="@+id/ic_pelayanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/hat"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp"/>

            <TextView
                android:id="@+id/text_pelayanan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Layanan PPDB"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@id/ic_pelayanan"
                android:layout_marginTop="17dp"
                android:textStyle="bold"

                />

            <TextView
                android:id="@+id/text_pelayanan2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Kota Bandung"
                android:drawableLeft="@drawable/icon03"
                android:layout_marginTop="17dp"
                android:textColor="#069550"
                app:layout_constraintTop_toBottomOf="@id/text_pelayanan"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</ScrollView>